generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model partners {
    id                   Int                    @id(map: " contractor_pkey") @default(autoincrement())
    name                 String                 @db.VarChar
    type                 Decimal                @db.Decimal(1, 0)
    edrpou               String                 @db.VarChar(8)
    group                Int[]                  @db.SmallInt
    created_at           DateTime?              @default(now()) @db.Timestamp(6)
    updated_at           DateTime?              @updatedAt @db.Timestamp(6)
    is_deleted           Boolean                @default(false)
    synonym_for_partners synonym_for_partners[]

    @@map("partners")
}

model synonym_for_partners {
    id          Int       @id @default(autoincrement())
    partners_id Int
    name        String    @db.VarChar
    created_at  DateTime? @default(now()) @db.Timestamp(6)
    updated_at  DateTime? @updatedAt @db.Timestamp(6)
    is_deleted  Boolean   @default(false)
    partners    partners  @relation(fields: [partners_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "partners_id_fkey")

    @@index([partners_id], map: "fki_partners_id_fkey")
    @@map("synonym_for_partners")
}
